<Window x:Class="MSNClient.RockPaperScissorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rock Paper Scissors" Height="350" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#EEF4FB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource MSNHeaderBrush}" Padding="10">
            <TextBlock Text="Rock Paper Scissors" Foreground="White" FontWeight="Bold" FontSize="16"/>
        </Border>

        <!-- Game Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Player 1 (You) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="Player1Name" Text="You" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#003399"/>
                <TextBlock x:Name="Player1Score" Text="Score: 0" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,20"/>
                
                <Border x:Name="P1MoveDisplay" Width="80" Height="80" BorderBrush="#8CB4E0" BorderThickness="2" CornerRadius="5" Background="White">
                    <TextBlock x:Name="P1MoveText" Text="?" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="P1Status" Text="Pick a move..." FontSize="12" Foreground="#666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- VS / Result -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="VS" FontSize="20" FontWeight="Bold" Foreground="#8CB4E0" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ResultText" Text="" FontSize="16" FontWeight="Bold" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" MaxWidth="150" TextAlignment="Center"/>
            </StackPanel>

            <!-- Player 2 (Opponent) -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="Player2Name" Text="Opponent" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#003399"/>
                <TextBlock x:Name="Player2Score" Text="Score: 0" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <Border x:Name="P2MoveDisplay" Width="80" Height="80" BorderBrush="#8CB4E0" BorderThickness="2" CornerRadius="5" Background="White">
                    <TextBlock x:Name="P2MoveText" Text="?" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="P2Status" Text="Thinking..." FontSize="12" Foreground="#666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Controls -->
        <Border Grid.Row="2" Background="#D0E4F8" Padding="10" BorderBrush="#8CB4E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnRock" Content="ðŸª¨ Rock" Width="80" Height="30" Margin="5" Click="BtnRock_Click" Style="{StaticResource MSNBtn}"/>
                <Button x:Name="BtnPaper" Content="ðŸ“„ Paper" Width="80" Height="30" Margin="5" Click="BtnPaper_Click" Style="{StaticResource MSNBtn}"/>
                <Button x:Name="BtnScissors" Content="âœ‚ï¸ Scissors" Width="80" Height="30" Margin="5" Click="BtnScissors_Click" Style="{StaticResource MSNBtn}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
