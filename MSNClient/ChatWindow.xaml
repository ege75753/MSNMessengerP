<Window x:Class="MSNClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="480" Width="520" MinHeight="350" MinWidth="400"
        Background="#EEF4FB" FontFamily="Tahoma">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat toolbar -->
        <Border Grid.Row="0" Background="#D8E8F8" BorderBrush="#8CB4E0" BorderThickness="0,0,0,1" Padding="4,3">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MSNBtn}" Margin="2,0" Padding="5,2" Click="Toolbar_File">
                    <StackPanel><TextBlock Text="ðŸ“Ž" FontSize="13" HorizontalAlignment="Center"/>
                    <TextBlock Text="Send File" FontSize="8" HorizontalAlignment="Center"/></StackPanel>
                </Button>
                <Button Style="{StaticResource MSNBtn}" Margin="2,0" Padding="5,2" Click="Toolbar_Nudge">
                    <StackPanel><TextBlock Text="ðŸ‘Š" FontSize="13" HorizontalAlignment="Center"/>
                    <TextBlock Text="Nudge" FontSize="8" HorizontalAlignment="Center"/></StackPanel>
                </Button>
                <Button Style="{StaticResource MSNBtn}" Margin="2,0" Padding="5,2" Click="Toolbar_Block">
                    <StackPanel><TextBlock Text="ðŸš«" FontSize="13" HorizontalAlignment="Center"/>
                    <TextBlock Text="Block" FontSize="8" HorizontalAlignment="Center"/></StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Contact info bar -->
        <Border Grid.Row="1" Background="#F0F6FC" BorderBrush="#8CB4E0" BorderThickness="0,0,0,1" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="ChatToText" FontSize="11" Foreground="#333333"/>
                    <TextBlock x:Name="ContactStatusInfo" FontSize="10" Foreground="#888888"/>
                </StackPanel>
                <Border Grid.Column="1" Width="48" Height="48" CornerRadius="3"
                        BorderBrush="#8CB4E0" BorderThickness="1" Background="#C8E0F8"
                        ClipToBounds="True">
                    <Grid>
                        <Image x:Name="ContactAvatarImage" Stretch="UniformToFill" Visibility="Collapsed" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock x:Name="ContactAvatar" FontSize="26"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Messages -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer x:Name="ChatScroll" VerticalScrollBarVisibility="Auto"
                          Background="White" BorderBrush="#8CB4E0" BorderThickness="1,0,0,1">
                <StackPanel x:Name="MessagesPanel" Margin="6,4"/>
            </ScrollViewer>
            <Border Grid.Column="1" Background="#F0F6FC" BorderBrush="#8CB4E0" BorderThickness="0,0,1,1" Padding="4">
                <StackPanel VerticalAlignment="Top">
                    <Border Width="58" Height="58" CornerRadius="3" BorderBrush="#8CB4E0"
                            BorderThickness="1" Background="#C8E0F8" Margin="0,4,0,4"
                            ClipToBounds="True">
                        <Grid>
                            <Image x:Name="SideAvatarImage" Stretch="UniformToFill" Visibility="Collapsed" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock x:Name="SideAvatar" FontSize="30"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="TypingText" Text="" FontSize="8" Foreground="#888888"
                               TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Warning -->
        <Border Grid.Row="3" Background="#FFFBE6" BorderBrush="#FFCC00" BorderThickness="0,1,0,1" Padding="6,3">
            <StackPanel>
                <TextBlock x:Name="StatusWarning" FontSize="10" Foreground="#555555" TextWrapping="Wrap"/>
                <TextBlock Text="âš ï¸  Never share your password or credit card in an IM conversation."
                           FontSize="10" Foreground="#666666" TextWrapping="Wrap" Margin="0,1,0,0"/>
            </StackPanel>
        </Border>

        <!-- Format toolbar -->
        <Border Grid.Row="4" Background="#E8F0F8" BorderBrush="#8CB4E0" BorderThickness="0,1,0,1" Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="FontCombo" Width="95" Height="20" FontSize="10" SelectionChanged="Font_Changed"/>
                <ComboBox x:Name="SizeCombo" Width="38" Height="20" FontSize="10" Margin="2,0" SelectionChanged="Size_Changed"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="3,1" FontWeight="Bold" Content="B" Click="Bold_Click"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="3,1" FontStyle="Italic" Content="I" Click="Italic_Click"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="3,1" Content="U" Click="Underline_Click"/>
                <Separator Margin="3,0"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="4,1" Content="ðŸ˜Š" Click="Emoticon_Click" ToolTip="Emoticons"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="4,1" Content="ðŸ·ï¸" Click="Sticker_Click" ToolTip="Stickers"/>
                <Button Style="{StaticResource MSNBtn}" Margin="1,0" Padding="4,1" Content="A" Foreground="Blue" Click="Color_Click" ToolTip="Font Color"/>
            </StackPanel>
        </Border>

        <!-- Input -->
        <RichTextBox Grid.Row="5" x:Name="InputBox" Background="White" Padding="4"
                     FontFamily="Tahoma" FontSize="11"
                     BorderBrush="#8CB4E0" BorderThickness="1,1,1,0"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     PreviewKeyDown="Input_KeyDown" TextChanged="Input_TextChanged"/>

        <!-- Send bar -->
        <Border Grid.Row="6" Background="#E0ECFA" BorderBrush="#8CB4E0" BorderThickness="0,0,0,0" Padding="4,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="SendStatus" FontSize="9" Foreground="#888" VerticalAlignment="Center" Margin="4,0" Text="Press Enter to send Â· Shift+Enter for new line"/>
                <Button Grid.Column="1" Style="{StaticResource MSNBtnPrimary}" Content="Send"
                        Padding="18,3" Click="Send_Click" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>
