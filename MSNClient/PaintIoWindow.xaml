<Window x:Class="MSNClient.Windows.PaintIoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paint.IO - Conquer The Map" Height="600" Width="900"
        Background="#111" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Connection / Waiting Overlay -->
        <Border x:Name="Overlay" Panel.ZIndex="20"
                Background="#CC000000" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸŽ® Paint.IO" Foreground="White" FontSize="36"
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Connecting to server..." Foreground="#AAA"
                           FontSize="16" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Death / Restart Overlay -->
        <Border x:Name="DeathOverlay" Panel.ZIndex="20"
                Background="#CC000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ’€ You Died!" Foreground="#E74C3C" FontSize="48"
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock x:Name="DeathScoreText" Text="Territory: 0 cells"
                           Foreground="#EEE" FontSize="18"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button x:Name="RestartButton" Content="â–¶  Play Again"
                        Width="180" Height="48" FontSize="18" FontWeight="Bold"
                        Background="#2ECC71" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Click="RestartButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="QuitButton" Content="âœ•  Quit"
                        Width="180" Height="36" FontSize="14"
                        Background="Transparent" Foreground="#888"
                        BorderThickness="0" Cursor="Hand"
                        Click="QuitButton_Click" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Score Board -->
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"
                Background="#AA000000" Margin="10" Padding="10,8"
                CornerRadius="8" Panel.ZIndex="5">
            <StackPanel x:Name="ScorePanel" MinWidth="130">
                <TextBlock Text="ðŸ† Leaderboard" Foreground="White"
                           FontWeight="Bold" FontSize="12" Margin="0,0,0,6"/>
                <!-- Scores injected dynamically -->
            </StackPanel>
        </Border>

        <!-- Game Canvas -->
        <Viewbox Stretch="Uniform">
            <Canvas x:Name="GameCanvas" Width="500" Height="500" Background="#1E1E1E"/>
        </Viewbox>
    </Grid>
</Window>
