<Application x:Class="MSNClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="MSNHeaderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90D9" Offset="0"/>
            <GradientStop Color="#2070C0" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="MSNSidebarBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EEF4FB" Offset="0"/>
            <GradientStop Color="#D8E8F8" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GroupHeaderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#C4DAF4" Offset="0"/>
            <GradientStop Color="#ACC8E8" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="MSNBtn" TargetType="Button">
            <Setter Property="Background" Value="#D0E4F8"/>
            <Setter Property="BorderBrush" Value="#8CB4E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Background" Value="#B8D4F0"/></Trigger>
                            <Trigger Property="IsPressed" Value="True"><Setter Property="Background" Value="#90B8E0"/></Trigger>
                            <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.5"/></Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MSNBtnPrimary" TargetType="Button" BasedOn="{StaticResource MSNBtn}">
            <Setter Property="Background" Value="#2070C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter Property="Background" Value="#1560A8"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="Background" Value="#0D4E90"/></Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="7,3"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#003399"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Background" Value="#C8DCF8"/></Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#8CB4E0"/>
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#8CB4E0"/>
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Application.Resources>
</Application>
