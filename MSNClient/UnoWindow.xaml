<Window x:Class="MSNClient.UnoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ”´ Uno" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#2E7D32"> <!-- Casino green table feel -->

    <Grid>
        <!-- Background elements (Gradient + Vignette) -->
        <Grid>
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                    <GradientStop Color="#2A5934" Offset="0" />
                    <GradientStop Color="#0D2E15" Offset="1" />
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>
        
        <!-- Table Canvas for Opponents and Animations -->
        <Canvas x:Name="TableCanvas" ClipToBounds="True" Panel.ZIndex="10"/>

        <!-- Center Area (Deck, Discard) -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0" Panel.ZIndex="20">
            <Border x:Name="CenterArea" Width="260" Height="180" Background="#33000000" CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5" Direction="270" ShadowDepth="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Draw Deck -->
                    <Border x:Name="DeckUI" Grid.Column="0" Width="90" Height="130" 
                            Background="#1A1A1A" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="2"
                            Cursor="Hand" MouseLeftButtonUp="Deck_Click" Margin="20,0,10,0"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.8" ShadowDepth="5"/>
                        </Border.Effect>
                        <Grid>
                            <Border BorderBrush="#E53935" BorderThickness="4" CornerRadius="8" Margin="4"/>
                            <TextBlock Text="UNO" Foreground="#E53935" FontSize="26" FontWeight="ExtraBlack" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-25"/>
                                </TextBlock.RenderTransform>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- Discard Pile -->
                    <Border x:Name="DiscardPileUI" Grid.Column="1" Width="90" Height="130" Margin="10,0,20,0"
                            CornerRadius="12" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Current Color Indicator -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,30,0"
                Width="60" Height="60" CornerRadius="30" BorderBrush="#44FFFFFF" BorderThickness="2"
                x:Name="CurrentColorIndicator" Background="Transparent" Panel.ZIndex="30" Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.6" ShadowDepth="5"/>
            </Border.Effect>
            <TextBlock Text="Color" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Play Direction Indicator -->
        <TextBlock x:Name="DirectionIcon" Text="â†»" FontSize="60" Foreground="#33FFFFFF" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-280,0,0" IsHitTestVisible="False" Panel.ZIndex="5" Visibility="Collapsed"/>

        <!-- Color Picker Overlay (Glassmorphic) -->
        <Grid x:Name="ColorPickerUI" Visibility="Collapsed" Background="#88000000" Panel.ZIndex="1000">
            <Border Width="300" Height="300" Background="#CC111111" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#55FFFFFF" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" Opacity="0.8" ShadowDepth="10"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Choose Color" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <Grid Width="200" Height="200">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Red -->
                        <Border Grid.Row="0" Grid.Column="0" Background="#E53935" CornerRadius="20,5,5,5" Margin="5" Cursor="Hand" MouseLeftButtonUp="ColorPicker_Click" Tag="Red"/>
                        <!-- Blue -->
                        <Border Grid.Row="0" Grid.Column="1" Background="#1E88E5" CornerRadius="5,20,5,5" Margin="5" Cursor="Hand" MouseLeftButtonUp="ColorPicker_Click" Tag="Blue"/>
                        <!-- Yellow -->
                        <Border Grid.Row="1" Grid.Column="0" Background="#FBC02D" CornerRadius="5,5,5,20" Margin="5" Cursor="Hand" MouseLeftButtonUp="ColorPicker_Click" Tag="Yellow"/>
                        <!-- Green -->
                        <Border Grid.Row="1" Grid.Column="1" Background="#43A047" CornerRadius="5,5,20,5" Margin="5" Cursor="Hand" MouseLeftButtonUp="ColorPicker_Click" Tag="Green"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom Hand Area (Glassmorphic) -->
        <Border VerticalAlignment="Bottom" Height="180" Background="#44000000" Panel.ZIndex="50" BorderBrush="#22FFFFFF" BorderThickness="0,1,0,0">
            <!-- ScrollViewer for overflowing hands -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="10">
                <StackPanel x:Name="MyHandPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>

        <!-- Status & Start Overlay -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0" Panel.ZIndex="60">
            <Border Background="#CC000000" CornerRadius="12" Padding="25,15" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5" ShadowDepth="5"/>
                </Border.Effect>
                <TextBlock x:Name="StatusText" Text="Waiting for players..." Foreground="White" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center"/>
            </Border>
            
            <Button x:Name="StartGameBtn" Content="START GAME" Width="200" Height="50" FontSize="18" FontWeight="Bold" 
                    Background="#E53935" Foreground="White" BorderThickness="0" Cursor="Hand"
                    Visibility="Collapsed" Click="StartGame_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect Color="#E53935" BlurRadius="15" Opacity="0.6" ShadowDepth="0"/>
                </Button.Effect>
            </Button>
        </StackPanel>

    </Grid>
</Window>
