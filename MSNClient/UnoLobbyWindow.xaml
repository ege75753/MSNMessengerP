<Window x:Class="MSNClient.UnoLobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ”´ Uno â€” Lobbies" Height="480" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FDEBED">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- header -->
            <RowDefinition Height="*"/>     <!-- lobby list -->
            <RowDefinition Height="Auto"/>  <!-- create section -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#CC0000" CornerRadius="6" Padding="12,10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸ”´ Uno" FontSize="16" FontWeight="Bold"
                           Foreground="White" TextAlignment="Center"/>
                <TextBlock Text="Play Uno with your MSN friends!" FontSize="11"
                           Foreground="#FFD9D9" TextAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lobby List -->
        <Border Grid.Row="1" BorderBrush="#E57373" BorderThickness="1" CornerRadius="4" Background="White" Margin="0,0,0,10">
            <Grid>
                <StackPanel x:Name="LobbyListPanel" Margin="4"/>
                <TextBlock x:Name="NoLobbiesText" Text="No lobbies available. Create one below!"
                           FontSize="12" Foreground="#888" FontStyle="Italic"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Create Lobby -->
        <Border Grid.Row="2" Background="#FFEBEE" CornerRadius="6" Padding="10">
            <StackPanel>
                <TextBlock Text="Create a New Lobby" FontSize="12" FontWeight="Bold"
                           Foreground="#B71C1C" Margin="0,0,0,6"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Lobby Name:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,4"/>
                    <TextBox x:Name="LobbyNameBox" Grid.Column="1" Style="{StaticResource TextBoxStyle}"
                             Text="My Uno Game" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="1" Text="Settings:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Players:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox x:Name="MaxPlayersBox" Width="30" Text="4" Style="{StaticResource TextBoxStyle}" Margin="0,0,10,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh" Padding="12,5"
                            Style="{StaticResource MSNBtn}" Margin="0,0,6,0" Click="Refresh_Click"/>
                    <Button x:Name="CreateBtn" Content="ðŸ”´ Create Lobby" Padding="12,5"
                            Style="{StaticResource MSNBtnPrimary}" Click="Create_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
