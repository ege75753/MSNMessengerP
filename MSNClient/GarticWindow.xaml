<Window x:Class="MSNClient.GarticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ¨ Gartic" Height="640" Width="900"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="#EEF4FB">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- top bar -->
            <RowDefinition Height="*"/>      <!-- main area -->
        </Grid.RowDefinitions>

        <!-- Top Bar: Round info + timer + word hint -->
        <Border Grid.Row="0" Background="#2070C0" CornerRadius="6" Padding="10,8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="RoundText" Text="Lobby" FontSize="13" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="WordHintText" Text="" FontSize="22" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center" FontFamily="Consolas"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="TimerText" Text="" FontSize="16" FontWeight="Bold"
                               Foreground="#FFD700" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main: Players | Canvas | Chat -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>  <!-- players -->
                <ColumnDefinition Width="*"/>    <!-- canvas -->
                <ColumnDefinition Width="220"/>  <!-- chat -->
            </Grid.ColumnDefinitions>

            <!-- Left: Player List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#8CB4E0" BorderThickness="1"
                    CornerRadius="4" Margin="0,0,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#D8E8F8" Padding="6,4" CornerRadius="4,4,0,0">
                        <TextBlock Text="ðŸ‘¥ Players" FontSize="11" FontWeight="Bold" Foreground="#003399"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PlayerListPanel" Margin="4"/>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Margin="4">
                        <Button x:Name="StartGameBtn" Content="â–¶ Start Game" Padding="8,5"
                                Style="{StaticResource MSNBtnPrimary}" Click="StartGame_Click"
                                Visibility="Collapsed" Margin="0,4,0,2"/>
                        <Button x:Name="LeaveLobbyBtn" Content="ðŸšª Leave" Padding="8,5"
                                Style="{StaticResource MSNBtn}" Click="Leave_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Center: Drawing Canvas -->
            <Border Grid.Column="1" Background="White" BorderBrush="#8CB4E0" BorderThickness="1"
                    CornerRadius="4" Margin="0,0,6,0" ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Canvas area -->
                    <Canvas x:Name="DrawingCanvas" Grid.Row="0" Background="White"
                            ClipToBounds="True"
                            MouseLeftButtonDown="Canvas_MouseDown"
                            MouseMove="Canvas_MouseMove"
                            MouseLeftButtonUp="Canvas_MouseUp"/>

                    <!-- Status overlay for waiting/spectating -->
                    <TextBlock x:Name="CanvasOverlay" Grid.Row="0" Text="Waiting for game to start..."
                               FontSize="16" Foreground="#99AABB" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsHitTestVisible="False"/>

                    <!-- Drawing toolbar -->
                    <Border Grid.Row="1" Background="#F0F4FA" Padding="6,4" BorderBrush="#8CB4E0"
                            BorderThickness="0,1,0,0">
                        <StackPanel x:Name="DrawToolbar" Orientation="Horizontal" HorizontalAlignment="Center"
                                    Visibility="Collapsed">
                            <!-- Colors -->
                            <TextBlock Text="Color:" FontSize="10" VerticalAlignment="Center"
                                       Margin="0,0,4,0" Foreground="#555"/>
                            <StackPanel x:Name="ColorPalette" Orientation="Horizontal" Margin="0,0,12,0"/>

                            <!-- Brush size -->
                            <TextBlock Text="Size:" FontSize="10" VerticalAlignment="Center"
                                       Margin="0,0,4,0" Foreground="#555"/>
                            <Slider x:Name="BrushSizeSlider" Width="60" Minimum="2" Maximum="16"
                                    Value="3" VerticalAlignment="Center" Margin="0,0,12,0"/>

                            <!-- Clear -->
                            <Button x:Name="ClearCanvasBtn" Content="ðŸ—‘ Clear" Padding="8,3"
                                    Style="{StaticResource MSNBtn}" Click="ClearCanvas_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: Chat -->
            <Border Grid.Column="2" Background="White" BorderBrush="#8CB4E0" BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#D8E8F8" Padding="6,4" CornerRadius="4,4,0,0">
                        <TextBlock Text="ðŸ’¬ Chat / Guess" FontSize="11" FontWeight="Bold" Foreground="#003399"/>
                    </Border>

                    <ScrollViewer x:Name="ChatScroller" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatPanel" Margin="4"/>
                    </ScrollViewer>

                    <Grid Grid.Row="2" Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GuessBox" Style="{StaticResource TextBoxStyle}"
                                 KeyDown="GuessBox_KeyDown" IsEnabled="False"/>
                        <Button Grid.Column="1" Content="Send" Padding="8,3" Margin="4,0,0,0"
                                Style="{StaticResource MSNBtn}" Click="SendGuess_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
