<Window x:Class="MSNClient.BlackjackLobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸƒ Blackjack â€” Lobbies" Height="480" Width="520"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#EEF4FB">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A6B3C" CornerRadius="6" Padding="12,10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸƒ Blackjack" FontSize="18" FontWeight="Bold"
                           Foreground="White" TextAlignment="Center"/>
                <TextBlock Text="Beat the dealer â€” join or create a table!" FontSize="11"
                           Foreground="#AAFFCC" TextAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lobby List -->
        <Border Grid.Row="1" BorderBrush="#8CB4E0" BorderThickness="1" CornerRadius="4" Background="White" Margin="0,0,0,10">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="LobbyListPanel" Margin="4"/>
                </ScrollViewer>
                <TextBlock x:Name="NoLobbiesText" Text="No tables available. Create one below!"
                           FontSize="12" Foreground="#888" FontStyle="Italic"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Create Lobby -->
        <Border Grid.Row="2" Background="#D8F0E8" CornerRadius="6" Padding="10">
            <StackPanel>
                <TextBlock Text="Create a New Table" FontSize="12" FontWeight="Bold"
                           Foreground="#1A6B3C" Margin="0,0,0,6"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Table Name:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,4"/>
                    <TextBox x:Name="LobbyNameBox" Grid.Column="1" Style="{StaticResource TextBoxStyle}"
                             Text="My Blackjack Table" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="1" Text="Max Players:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <TextBox x:Name="MaxPlayersBox" Width="30" Text="6" Style="{StaticResource TextBoxStyle}" Margin="0,0,8,0"/>
                        <TextBlock Text="(2â€“7)" FontSize="10" VerticalAlignment="Center" Foreground="#666"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh" Padding="12,5"
                            Style="{StaticResource MSNBtn}" Margin="0,0,6,0" Click="Refresh_Click"/>
                    <Button x:Name="CreateBtn" Content="ðŸƒ Create Table" Padding="12,5"
                            Style="{StaticResource MSNBtnPrimary}" Click="Create_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
